#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import argparse
import logging
import sys

from vrt.cohorts import main
from vrt.version import __version__

logging.basicConfig(format="%(levelname)s: %(message)s", level=logging.INFO)
# logging.basicConfig(format='%(message)s', level=logging.DEBUG)


if __name__ == "__main__":

    parser = argparse.ArgumentParser(description="vrt-cohort: conflate texts according to meta data into cohorts")
    parser.add_argument("-v", "--version", action="version", version="cwb-vrt %s" % __version__, help="Output version information and exit.")

    parser.add_argument("path_in", type=str, help="path to original .vrt.gz")
    parser.add_argument("--path_out", "-o", dest="path_out", default=None, type=str, help="where to save the result")
    parser.add_argument("--force", "-f", dest="force", default=False, action='store_true', help="overwrite existing output file?")
    parser.add_argument("--text_old", dest="text_old", default="text", type=str, help="the old 'text' level [text]")
    parser.add_argument("--text_new", dest="text_new", default="subtext", type=str, help="the new 'text' level [subtext]")
    parser.add_argument("--cohort", dest="cohort", default="text", type=str, help="the new 'text' level [text]")
    parser.add_argument("--categorical", "-c", dest="categorical", nargs="+", default=[], type=str, help="text attribute names used for cohorting")

    if len(sys.argv) < 2:
        parser.print_help()
        sys.exit(1)

    main(parser.parse_args())
